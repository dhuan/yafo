{
  "name": "yafo",
  "version": "0.1.0",
  "description": "Yet another form library for React.",
  "main": "dist/yafo.js",
  "typings": "dist/yafo.d.ts",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "./node_modules/.bin/jest ./tests",
    "test:watch": "./node_modules/.bin/jest ./tests --watch",
    "build": "./node_modules/.bin/tsc",
    "playground:build": "npm run playground:update_yafo; npm install",
    "playground:start": "cd playground && SKIP_PREFLIGHT_CHECK=true npm run start",
    "playground:update_yafo": "npm run build; mkdir -p ./playground/src/yafo/. ; cp -r ./dist/* ./playground/src/yafo/.",
    "lint": "./node_modules/.bin/eslint . --ext '.ts,.tsx'"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@rollup/plugin-typescript": "^6.1.0",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "@types/jest": "^26.0.15",
    "@types/react": "^16.9.55",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "eslint": "^7.15.0",
    "jest": "^26.6.3",
    "react": "^16.14.0",
    "react-dom": "^16.13.1",
    "react-test-renderer": "^17.0.1",
    "ts-jest": "^26.4.4",
    "tslib": "^2.0.3",
    "typescript": "^4.1.2"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "dependencies": {
    "rollup": "^2.33.1"
  },
  "files": [
    "dist/*"
  ]
}
